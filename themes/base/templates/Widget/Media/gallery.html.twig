<div class="row image-gallery" id="gallery-{{ gallery.slug }}">
    {% for item in gallery.items %}
    <div class="col-xs-6 col-md-3">
        <a href="{{ item.image.webpath }}" target="_blank" class="thumbnail" data-title="{{ item.caption }}" data-toggle="lightbox" data-parent=".image-gallery" data-gallery="{{ gallery.slug }}">
            <img src="{{ item.image | imagine_filter('gallery_thumbnail') }}" />
        </a>
    </div>
    {% endfor %}
</div>